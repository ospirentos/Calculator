<MainScreen>:
    txt_inpt: txt_inpt
    rows: 2
    cols: 1
    Label:
        id: txt_inpt
        text: 'Hello'
        font_size : "50sp"
    GridLayout:
        rows:7
        cols:3
        Button:
            text: '1'
            on_release: root.update_label("1")
        Button:
            text: '2'
            on_release: root.update_label("2")
        Button:
            text: '3'
            on_release: root.update_label("3")
        Button:
            text: '4'
            on_release: root.update_label("4")
        Button:
            text: '5'
            on_release: root.update_label("5")
        Button:
            text: '6'
            on_release: root.update_label("6")
        Button:
            text: '7'
            on_release: root.update_label("7")
        Button:
            text: '8'
            on_release: root.update_label("8")
        Button:
            text: '9'
            on_release: root.update_label("9")
        Button:
            text: '0'
            on_release: root.update_label("0")
        Button:
            text: '+'
            on_release: root.update_label("+")
        Button:
            text: '-'
            on_release: root.update_label("-")
        Button:
            text: '*'
            on_release: root.update_label("*")
